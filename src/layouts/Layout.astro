---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import InfoBelt from '../components/InfoBelt.astro';
---
<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Pretty care</title>
        <link rel="stylesheet" href="https://use.typekit.net/ese3hic.css">
	</head>
    <InfoBelt />
    <Header />
	<body>
        <main class="flex flex-col flex-1">
            <slot />
        </main>
	</body>

    <Footer />
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
        font-size: 16px;
	}
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        display: flex;
        justify-content: center;
        flex: 1;
    }
</style>
